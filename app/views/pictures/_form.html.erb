<%= form_for(@picture, url:choose_new_or_edit) do |f| %>

  <%= f.error_messages! %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>

  <% if @picture.image? %>
    <%= image_tag @picture.image.url %>
  <% end %>
  <br>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>
  <br>
  <br>

  <%= f.label :comment %>
  <%= f.text_field :comment, class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
<br>
<%= link_to "画像一覧", pictures_path %>
