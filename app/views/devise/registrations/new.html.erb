<% if notice != nil %>
  <div class="alert alert-warning alert-dismissable">
    <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <p><%= notice %></p>
  </div>
<% end %>
<div class="container" style="margin-bottom:50px">
  <div class="row">
    <div class="col-md-4 col-md-offset-2 hidden-sm hidden-xs" style="margin-top:50px;">
      <img src="<%= asset_path "signup2.png" %>" style="width:90%;">
    </div>
    <div class="col-md-4 col-md-offset-0 col-sm-6 col-sm-offset-3" style="margin-top:10%; background:white;">
      <br>
      <img src="<%= asset_path "logonyan1.png" %>" style="width:50%;"><br><br>

      <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
        <%= f.error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
        </div>

        <div class="field">
          <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認）" %>
        </div>

        <div class="actions">
          <%= f.submit "登録する", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      <br>
    </div>
  </div>
</div>
